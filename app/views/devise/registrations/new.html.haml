.devise_top
  =image_tag 'Rectangle.png', class: 'devise-image'
.container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :name, 'Account Name', class: 'form-label'
      %br/
      = f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-text'
    .field
      = f.label :email, 'Email', class: 'form-label'
      %br/
      = f.email_field :email, autocomplete: "email", class: 'form-text'
    .field
      = f.label :password, 'Password', class: 'form-label'
      %br/
      = f.password_field :password, autocomplete: "new-password" , class: 'form-text'
    .actions
      = f.submit "CREATE ACCOUNT", class: 'form-submit'